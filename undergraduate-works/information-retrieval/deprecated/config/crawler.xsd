<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="" xmlns="" elementFormDefault="qualified">
    <xs:element name="crawler">
        <xs:complexType>
            <xs:sequence>                
                <xs:element name="config">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="userAgent" type="xs:string" />
                            <xs:element name="urlProvider">
                                <xs:attribute name="host" type="xs:string" use="required" />
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="urls">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="url">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="uri" type="xs:string" />
                                        <xs:element name="schema" type="xs:string" />
                                        <xs:element name="authority" type="xs:string" />
                                        <xs:element name="path" type="xs:string" />
                                        <xs:element name="serverProvider">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="host" type="xs:string" />
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>
